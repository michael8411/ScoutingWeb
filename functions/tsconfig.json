{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "lib": [
      "es2018"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    ".eslintrc.js"
    
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}